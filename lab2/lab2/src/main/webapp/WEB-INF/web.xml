<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RequestFilter</filter-name>
        <filter-class>com.amihaeseisergiu.filters.RequestFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ResponseDecorator</filter-name>
        <filter-class>com.amihaeseisergiu.filters.ResponseDecorator</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ResponseDecorator</filter-name>
        <url-pattern>/InputController</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequestFilter</filter-name>
        <url-pattern>/input.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>com.amihaeseisergiu.config.Config</listener-class>
    </listener>
    <servlet>
        <servlet-name>InputController</servlet-name>
        <servlet-class>com.amihaeseisergiu.controllers.InputController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaptchaImage</servlet-name>
        <servlet-class>com.amihaeseisergiu.controllers.CaptchaImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputController</servlet-name>
        <url-pattern>/InputController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaImage</servlet-name>
        <url-pattern>/CaptchaImage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>defaultCategory</param-name>
        <param-value>Unknown</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>input.jsp</welcome-file>
    </welcome-file-list>
</web-app>
